<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AssemblyName>Library</AssemblyName>
    <RootNamespace>Library</RootNamespace>
    <LangVersion>7.3</LangVersion>
    <Version>1.3.20</Version>
    <ProduceReferenceAssembly>False</ProduceReferenceAssembly>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NETCOREAPP2_0;SERVER;LIBRARY</DefineConstants>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>1701;1702;0168;0169;0067</NoWarn>
    <OutputPath>..\..\Bin\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>DEBUG;TRACE;NETCOREAPP2_0;SERVER;LIBRARY</DefineConstants>
    <Optimize>true</Optimize>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>1701;1702;0168;0169;0067</NoWarn>
    <OutputPath>..\..\Bin\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Model\Module\Numeric\Event\**" />
    <Compile Remove="Model\Share\SportComponent\**" />
    <EmbeddedResource Remove="Model\Module\Numeric\Event\**" />
    <EmbeddedResource Remove="Model\Share\SportComponent\**" />
    <None Remove="Model\Module\Numeric\Event\**" />
    <None Remove="Model\Share\SportComponent\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Model\Share\Utility\LobbyUtility.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Model\Module\Entity\MapUnit\MapUnit.cs" Link="Model\Other\MapUnit.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Flee" Version="2.0.0" />
    <PackageReference Include="SharpZipLib" Version="1.4.2" />
    <PackageReference Include="NLog" Version="4.5.4" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="MongoDB.Bson">
      <HintPath>..\ThirdParty\MongoDB.Bson.dll</HintPath>
    </Reference>
    <Reference Include="Pathfinding.Ionic.Zip.Reduced">
      <HintPath>..\ThirdParty\Pathfinding.Ionic.Zip.Reduced.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine">
      <HintPath>..\ThirdParty\UnityEngine.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
